
<div class="card-category text-center text-white" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>') ; height: 500px; background-size: cover">
  <h1><%= @list.name %> </h1>
</div>

<div class="container">
<% @bookmarks.each do |bookmark| %>
  <div class="card"><%= bookmark.movie.title %> : <%= bookmark.comment %></div>
  <%= link_to "Remove", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
</div>

<%= link_to 'My lists', lists_path %>
<%= link_to 'Add a movie', new_list_bookmark_path(@list) %>
